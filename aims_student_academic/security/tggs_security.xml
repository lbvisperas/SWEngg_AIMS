<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="module_category_tggs" model="ir.module.category">
            <field name="name">TGGS</field>
            <field name="description">Sample1</field>
            <field name="sequence">15</field>
        </record>

        <record id="module_category_tggs_others" model="ir.module.category">
            <field name="name">Outside TGGS</field>
            <field name="description">Sample2</field>
            <field name="sequence">20</field>
        </record>

        <record id="group_student_student" model="res.groups">
            <field name="name">Student</field>
            <field name="category_id" ref="module_category_tggs"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_student_faculty" model="res.groups">
            <field name="name">Faculty</field>
            <field name="category_id" ref="module_category_tggs"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="implied_ids" eval="[(4, ref('Student_Academic.group_student_student')), (4, ref('base.group_user'))]"/>
        </record>

        <record id="group_student_back_office" model="res.groups">
            <field name="name">Back Office</field>
            <field name="category_id" ref="module_category_tggs"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="implied_ids" eval="[(4, ref('Student_Academic.group_student_faculty')),(4, ref('base.group_partner_manager'))]"/>
        </record>

        <record id="group_student_back_office_admin" model="res.groups">
            <field name="name">Back Office Admin</field>
            <field name="category_id" ref="module_category_tggs"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="implied_ids" eval="[(4, ref('Student_Academic.group_student_back_office')),(4, ref('base.group_system'))]"/>
        </record>

        <record model="ir.rule" id="student_login_rule">
            <field name="name">Student Login rule</field>
            <field name="model_id" ref="model_student_student" />
            <field name="groups"
                eval="[(4, ref('Student_Academic.group_student_student'))]" />
            <field name="domain_force"> [('user_id','=',user.id)]</field>
        </record>

        <record model="ir.rule" id="view_students_rule">
            <field name="name">View Students</field>
            <field name="model_id" ref="model_student_student" />
            <field name="groups"
                eval="[(4, ref('Student_Academic.group_student_faculty'))]" />
            <field name="domain_force"> [(1,'=',1)]</field>
        </record>

        <record model="ir.rule" id="faculty_login_rule">
            <field name="name">Faculty Login rule</field>
            <field name="model_id" ref="model_student_faculty" />
            <field name="groups"
                eval="[(4, ref('Student_Academic.group_student_faculty'))]" />
            <field name="domain_force"> [('user_id','=',user.id)]</field>
        </record>

        <record model="ir.rule" id="view_faculty_rule">
            <field name="name">View Faculties</field>
            <field name="model_id" ref="model_student_faculty" />
            <field name="groups"
                eval="[(4, ref('Student_Academic.group_student_back_office'))]" />
            <field name="domain_force"> [(1,'=',1)]</field>
        </record>

    </data>
</odoo>
